<%= form_for(@position) do |f| %>
  <% if @position.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@position.errors.count, "error") %> prohibited this position from being saved:</h2>

      <ul>
      <% @position.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <% if Position.find_by_title(@position.title) %>
    <div class="field">
      <%  f.label :ranking %><br />
      <%= f.select :ranking, options_for_select((1..15), :selected => @position.ranking)%>
    </div>
  <% else %>
    <div class="field">
      <%  f.label :ranking %><br />
      <%= f.select :ranking, options_for_select((1..15))%>
    </div>

  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
