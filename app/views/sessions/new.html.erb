<h1>Log In</h1>
<% if flash[:notice] %>
   <p class="alert alert-danger"><%= flash[:notice] %></p>
 <% end %>


<%= form_tag sessions_path do %>
	<p>
		<%= label_tag :email %><br />
		<%= text_field_tag :email, params[:email] %>
	</p>
	<p>
		<%= label_tag :password %><br />
		<%= password_field_tag :password %>
	</p>
	<p class="button"><%= submit_tag "Log In" %></p>
<% end %>