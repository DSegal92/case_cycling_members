<h1>Club Documents</h1>

<div class="grid_12">
  <table class="table" cellpadding="10">
  <tr class="thead">
    <th>Document</th>
    <th></th>
    <th>Description</th>
    <th></th>
    <% if current_user && (current_user.is_officer || current_user.is_admin) %>
    <th></th><th></th>
    <% end %>
  </tr>

<tbody>
<% @documents.each_with_index do |document, index| %>
    <td><%= document.name %></td>
    <td>
		<a href="<%= document.url %>" title="<%= document.name %>">Open</a>
	</td>
    <td><%= document.description %></td>
  <% if current_user && (current_user.is_officer || current_user.is_admin) %>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
  </tr>
<% end %>
</tbody>
</table>

<br />
<% if current_user && (current_user.is_officer || current_user.is_admin) %>
<%= link_to 'New Document', new_document_path %>
<% end %>
