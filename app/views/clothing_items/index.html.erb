<h1>Clothing</h1>

<div class="grid_12">
<table class="table" cellpadding="10">
  <tr class="thead">
    <th>Name</th>
    <th>Picture URL</th>
    <% if current_user && current_user.is_admin %>
    <th></th>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @clothing_items.each do |clothing_item| %>
  <tr>
    <td><%= clothing_item.name %></td>
    <td>
    	<a href="<%= clothing_item.picture_url %>" title="<%= clothing_item.name %>">Open</a>
    </td>
    <% if current_user && current_user.is_admin %>
    <td><%= link_to 'Show', clothing_item %></td>
    <td><%= link_to 'Edit', edit_clothing_item_path(clothing_item) %></td>
    <td><%= link_to 'Destroy', clothing_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
</div>

<div>
<% if current_user && current_user.is_admin %>
<%= link_to 'New Clothing Item', new_clothing_item_path %>
<% end %>
</div>
