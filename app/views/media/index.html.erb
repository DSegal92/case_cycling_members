<h1>Media</h1>

<div class="grid_12">
<table class="table" cellpadding="10">
  <tr class="thead">
    <th>Title</th>
    <th>URL</th>
    <th>Type</th>
    <% if current_user && current_user.is_admin %>
    <th></th>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @media.each do |medium| %>
  <tr>
    <td><%= medium.title %></td>
    <td>
    	<a href="<%= medium.url %>" title="<%= medium.title %>">Open</a>
    </td>
    <td>
    	<% if medium.is_photo %>
    	Photo
    	<% elsif medium.is_video %>
    	Video
    	<% else %>
    	Other
    	<% end %>
    </td>
    <% if current_user && current_user.is_admin %>
    <td><%= link_to 'Show', medium %></td>
    <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
    <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
</div>

<div>
<% if current_user && current_user.is_admin %>
<%= link_to 'New Media', new_medium_path %>
<% end %>
</div>